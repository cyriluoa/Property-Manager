<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PropertyManager" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color for dark theme -->
        <item name="colorPrimary">@color/accent_light_blue</item>
        <item name="colorPrimaryVariant">@color/primary_blue</item>
        <item name="colorOnPrimary">@color/text_primary</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/medium_blue</item>
        <item name="colorSecondaryVariant">@color/primary_blue</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background colors for dark theme -->
        <item name="android:colorBackground">#121212</item>
        <item name="colorSurface">#1E1E1E</item>
        <item name="colorOnSurface">@color/white</item>

        <!-- Status bar for dark theme -->
        <item name="android:statusBarColor">#121212</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Text Input Layout theme -->
        <item name="textInputStyle">@style/CustomTextInputLayout</item>
    </style>
</resources>