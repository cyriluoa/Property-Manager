<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PropertyManager" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/medium_blue</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent_light_blue</item>
        <item name="colorSecondaryVariant">@color/medium_blue</item>
        <item name="colorOnSecondary">@color/text_primary</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/background_light</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Text Input Layout theme -->
        <item name="textInputStyle">@style/CustomTextInputLayout</item>
    </style>

    <style name="Theme.PropertyManager" parent="Base.Theme.PropertyManager" />

    <style name="CustomTextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary_blue</item>
        <item name="hintTextColor">@color/primary_blue</item>
        <item name="android:textColorHint">@color/text_secondary</item>
    </style>

    <!-- Button styles -->
    <style name="PrimaryButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">28dp</item>
        <item name="android:minHeight">56dp</item>
    </style>

    <!-- Text styles -->
    <style name="HeaderText">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="SubHeaderText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="LinkText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primary_blue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DatePickerTheme" parent="ThemeOverlay.Material3.MaterialCalendar">
        <item name="materialCalendarTheme">@style/CustomCalendar</item>
    </style>


    <style name="CustomCalendar" parent="Widget.Material3.MaterialCalendar">
        <!-- Selected day circle and top bar background -->
        <item name="colorPrimary">@color/primary_blue</item>

        <!-- Text color inside selected day circle -->
        <item name="colorOnPrimary">@color/white</item>

        <!-- Background of calendar container -->
        <item name="colorSurface">@color/card_background</item>

        <!-- Text of dates -->
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Accent colors (range fill, etc.) -->
        <item name="colorSecondary">@color/medium_blue</item>

    </style>


</resources>