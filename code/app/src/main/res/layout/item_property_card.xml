<?xml version="1.0" encoding="utf-8"?>
<layout>

    <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:strokeColor="@color/primary_blue"
        app:strokeWidth="3dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/card_background">

            <!-- Header Section with Title -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="@drawable/card_header_blue_bg"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_property_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sunset Villa Apartment"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:maxLines="2"
                        android:ellipsize="end"
                        tools:text="Sunset Villa Apartment" />


                </LinearLayout>

                <!-- Property Status Badge -->
                <TextView
                    android:id="@+id/tv_property_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/status_badge_yellow"
                    android:paddingStart="8dp"
                    android:paddingTop="4dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="4dp"
                    android:text="PENDING"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Red Divider Line -->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/medium_blue"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp" />

            <!-- Image Section -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_margin="16dp">

                <ImageView
                    android:id="@+id/iv_property_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:background="@drawable/image_placeholder_themed_blue_bg"
                    android:src="@drawable/ic_property"
                    tools:src="@tools:sample/backgrounds/scenic" />

                <!-- Image Overlay for No Image -->
                <LinearLayout
                    android:id="@+id/ll_no_image_overlay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/image_placeholder_themed_blue_bg">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_property"
                        android:layout_marginBottom="8dp"
                        app:tint="@color/medium_blue"
                        android:alpha="0.6" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No Image"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:alpha="0.8" />

                </LinearLayout>

            </FrameLayout>

            <!-- Another Red Divider Line -->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/medium_blue"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp" />

            <!-- Property Details Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/card_details_bg">

                <!-- Current Client -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_person"
                        android:layout_marginEnd="8dp"
                        app:tint="@color/primary_blue" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Current client"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_current_client"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="John Smith"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            tools:text="John Smith" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Amount Due This Month -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_calendar"
                        android:layout_marginEnd="8dp"
                        app:tint="@color/medium_blue" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Due This Month"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_amount_due_month"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$1,200"
                            android:textSize="18sp"
                            android:textColor="@color/error_red"
                            android:textStyle="bold"
                            tools:text="$1,200" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Total Amount Due -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_payment"
                        android:layout_marginEnd="8dp"
                        app:tint="@color/success_green" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Amount Due"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_total_amount_due"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$3,600"
                            android:textSize="18sp"
                            android:textColor="@color/success_green"
                            android:textStyle="bold"
                            tools:text="$3,600" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Contracts Button -->
                <Button
                    android:id="@+id/btn_contracts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contracts"
                    android:textAllCaps="false"
                    android:layout_gravity="end"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@color/primary_blue"/>


            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>