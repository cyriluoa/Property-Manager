<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/payableCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="4dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@color/white"
        app:strokeColor="@color/accent_light_blue"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Top Header with Gradient Background -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_top_gradient"
                android:padding="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvPayableTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="September 2025 Rent"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvPayableStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DUE"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@drawable/status_badge_yellow"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:layout_marginStart="12dp"
                    android:elevation="2dp" />
            </LinearLayout>

            <!-- Payable Details Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Start Date -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Start Date:"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvStartDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="September 1, 2025"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary" />
                </LinearLayout>

                <!-- Due Date -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Due Date:"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvDueDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="September 30, 2025"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary" />
                </LinearLayout>

                <!-- Full Amount -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Full Amount:"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvFullAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹25,000"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Total Paid -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Total Paid:"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvTotalPaid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹15,000"
                        android:textSize="14sp"
                        android:textColor="@color/primary_blue" />
                </LinearLayout>

                <!-- Left to Pay -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Left to Pay:"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvLeftToPay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹10,000"
                        android:textSize="14sp"
                        android:textColor="@color/error_red"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            <!-- Action Buttons Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp">

                <!-- View Payments Button -->
                <Button
                    android:id="@+id/btnViewBills"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Payments"
                    android:textStyle="bold"
                    android:backgroundTint="@color/primary_blue"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="10dp" />

                <!-- Make Payment Button (Visible in CLIENT_MODE only) -->
                <Button
                    android:id="@+id/btnMakePayment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Make Payment"
                    android:textStyle="bold"
                    android:backgroundTint="@color/success_green"
                    android:textColor="@android:color/white"
                    android:layout_marginStart="10dp"
                    android:textSize="14sp"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="10dp"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>