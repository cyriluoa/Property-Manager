<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="4dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@color/white"
        app:strokeColor="@color/accent_light_blue"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Top Section with Payment Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_top_gradient"
                android:padding="16dp">

                <!-- Property Name and Status Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/owner_icon_bg"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Property: "
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:alpha="0.9" />

                    <TextView
                        android:id="@+id/tv_property_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Luxury Villa Downtown"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/tv_payment_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PENDING"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:background="@drawable/status_badge_yellow"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp"
                        android:layout_marginStart="12dp"
                        android:elevation="2dp" />

                </LinearLayout>

                <!-- Amount Paid - Most Important -->
                <TextView
                    android:id="@+id/tv_amount_paid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹25,000.00"
                    android:textColor="@color/white"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:elevation="2dp" />

            </LinearLayout>

            <!-- Bottom Section with Details -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Payment Info Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <!-- Date Column -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Paid at"
                            android:textColor="@color/text_secondary"
                            android:textSize="11sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_timestamp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jan 30, 2025"
                            android:textColor="@color/text_primary"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                    <!-- View Image Button Column -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="end">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_view_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View Image"
                            android:textColor="@color/white"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            app:backgroundTint="@color/primary_blue"
                            app:cornerRadius="8dp"
                            app:strokeColor="@color/medium_blue"
                            app:strokeWidth="1dp"
                            android:minHeight="40dp"
                            android:paddingHorizontal="20dp"
                            android:paddingVertical="10dp"
                            app:rippleColor="@color/accent_light_blue"
                            android:elevation="2dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Notes Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notes"
                        android:textColor="@color/text_secondary"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_notes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Payment for monthly rent - January 2025"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        android:maxLines="3"
                        android:maxLength="500"
                        android:ellipsize="end" />

                </LinearLayout>

                <!-- Action Buttons Row -->
                <LinearLayout
                    android:id="@+id/layout_action_buttons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:visibility="gone">

                    <!-- Deny Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_deny"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="Deny"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        app:backgroundTint="@color/error_red"
                        app:cornerRadius="8dp"
                        app:strokeColor="@android:color/holo_red_dark"
                        app:strokeWidth="1dp"
                        android:minHeight="48dp"
                        android:paddingVertical="12dp"
                        app:rippleColor="@android:color/holo_red_dark"
                        android:elevation="2dp" />

                    <!-- Approve Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_approve"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="Approve"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        app:backgroundTint="@color/success_green"
                        app:cornerRadius="8dp"
                        app:strokeColor="@android:color/holo_green_dark"
                        app:strokeWidth="1dp"
                        android:minHeight="48dp"
                        android:paddingVertical="12dp"
                        app:rippleColor="@android:color/holo_green_dark"
                        android:elevation="2dp" />

                </LinearLayout>

                <!-- ProgressBar (overlay) -->
                <ProgressBar
                    android:id="@+id/progress_bar"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:indeterminateTint="@color/primary_blue"
                    android:visibility="gone"
                    android:indeterminate="true" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>