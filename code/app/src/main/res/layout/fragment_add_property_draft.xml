<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@color/background_light">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header Section with gradient background -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/header_gradient_bg"
                android:paddingHorizontal="16dp"
                android:paddingTop="48dp"
                android:paddingBottom="40dp">

                <!-- Header with Back Button -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageButton
                        android:id="@+id/btn_back"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_arrow_back"
                        android:contentDescription="Back"
                        android:visibility="gone"
                        app:tint="@color/white" />

                    <!-- Main Heading -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Breakdown"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:elevation="2dp" />

                    <!-- Spacer to balance the back button -->
                    <View
                        android:id="@+id/space_balancer"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:visibility="gone"/>

                </LinearLayout>

            </LinearLayout>

            <!-- Content Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginTop="-16dp"
                android:background="@drawable/content_rounded_background"
                android:elevation="4dp">

                <!-- Property Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardProperty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp"
                    app:strokeColor="@color/accent_light_blue"
                    app:strokeWidth="2dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp"
                        android:background="@drawable/property_card_background">

                        <!-- Section Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp"
                            android:padding="12dp"
                            android:background="@drawable/section_header_background">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Property Details"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/white" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_property_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Property Name"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/tv_property_owner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Owner Name"
                            android:textSize="16sp"
                            android:textColor="@color/medium_blue"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:id="@+id/tv_property_client"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Client Name"
                            android:textSize="16sp"
                            android:textColor="@color/medium_blue"
                            android:layout_marginBottom="12dp" />



                        <ImageView
                            android:id="@+id/iv_property_image"
                            android:layout_width="match_parent"
                            android:layout_marginTop="20dp"
                            android:layout_height="300dp"
                            android:scaleType="fitCenter"
                            android:visibility="gone"
                            android:contentDescription="Property Image"
                            android:background="@color/light_gray"
                            app:cornerRadius="12dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Pre-Contract Overdues Breakdown Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp"
                    app:strokeColor="@color/accent_light_blue"
                    app:strokeWidth="2dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <!-- Section Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp"
                            android:padding="12dp"
                            android:background="@drawable/section_header_background">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Pre-Contract Overdues Breakdown"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/white" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_no_pc_overdues"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="No pre contract overdues"
                            android:textSize="16sp"
                            android:textColor="@color/text_secondary"
                            android:gravity="center"
                            android:layout_marginVertical="24dp"
                            android:padding="16dp"
                            android:background="@drawable/empty_state_background"
                            android:drawablePadding="8dp"
                            android:visibility="visible" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_pc_overdues"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Monthly Rent Breakdown Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp"
                    app:strokeColor="@color/accent_light_blue"
                    app:strokeWidth="2dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <!-- Section Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp"
                            android:padding="12dp"
                            android:background="@drawable/section_header_background">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Monthly Rent Breakdown"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/white" />

                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_rent_breakdown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clipToPadding="false"
                            android:paddingBottom="16dp"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Notes Section Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp"
                    app:strokeColor="@color/accent_light_blue"
                    app:strokeWidth="2dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <!-- Section Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp"
                            android:padding="12dp"
                            android:background="@drawable/section_header_background">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Additional Notes"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/white" />

                        </LinearLayout>

                        <!-- Notes Input Area -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Add any additional notes or comments"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary"
                                android:layout_marginBottom="8dp" />

                            <EditText
                                android:id="@+id/et_notes"
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:hint="Enter notes here..."
                                android:textSize="16sp"
                                android:textColor="@color/text_primary"
                                android:textColorHint="@color/text_secondary"
                                android:background="@drawable/notes_input_background"
                                android:padding="12dp"
                                android:gravity="top|start"
                                android:inputType="textMultiLine|textCapSentences"
                                android:maxLength="500"
                                android:scrollbars="vertical" />

                            <!-- Character Counter -->
                            <TextView
                                android:id="@+id/tv_character_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:text="0/500"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Original Action Buttons (Confirm/Cancel) -->
                <LinearLayout
                    android:id="@+id/layout_confirm_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="32dp"
                    android:padding="16dp"
                    android:visibility="visible">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_cancel"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:text="Cancel"
                        android:textColor="@color/medium_blue"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginEnd="12dp"
                        android:backgroundTint="@color/white"
                        app:strokeColor="@color/medium_blue"
                        app:strokeWidth="2dp"
                        app:cornerRadius="28dp"
                        app:elevation="4dp"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_confirm"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:text="Confirm"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginStart="12dp"
                        android:backgroundTint="@color/primary_blue"
                        app:cornerRadius="28dp"
                        app:elevation="4dp" />

                </LinearLayout>

                <!-- New Action Buttons (Accept/Deny) -->
                <LinearLayout
                    android:id="@+id/layout_accept_deny"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="32dp"
                    android:padding="16dp"
                    android:visibility="gone">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_deny"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:text="Deny"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginEnd="12dp"
                        android:backgroundTint="@color/error_red"
                        app:cornerRadius="28dp"
                        app:elevation="4dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_accept"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:text="Accept"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginStart="12dp"
                        android:backgroundTint="@color/success_green"
                        app:cornerRadius="28dp"
                        app:elevation="4dp" />

                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progress_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingTop="12dp"
                    android:indeterminateTint="@color/primary_blue"
                    android:visibility="gone"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</layout>