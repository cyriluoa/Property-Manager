<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/background_light">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payments Dashboard"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:padding="16dp"
            android:background="@drawable/header_gradient_bg"
            android:elevation="4dp" />

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_refresh"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="16dp"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <!-- All Properties: Full Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="24dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="4dp"
                            app:strokeColor="@color/primary_blue"
                            app:strokeWidth="2dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/card_background"
                                android:orientation="vertical"
                                android:padding="16dp"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/ic_property"
                                    app:tint="@color/primary_blue"
                                    android:layout_marginBottom="8dp" />

                                <TextView
                                    android:id="@+id/tv_total_properties"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="12"
                                    android:textSize="24sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/primary_blue"
                                    tools:text="12" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Properties"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_secondary"
                                    android:gravity="center" />

                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>

                    <!-- Row 2: Accepted & Active -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">



                        <!-- Active Contracts -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardActiveContracts"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="4dp"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="4dp"
                            app:strokeColor="@color/success_green"
                            app:strokeWidth="2dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/card_background"
                                android:orientation="vertical"
                                android:padding="16dp"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_calendar"
                                    app:tint="@color/success_green"
                                    android:layout_marginBottom="8dp" />

                                <TextView
                                    android:id="@+id/tv_active_contracts"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="8"
                                    android:textSize="24sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/success_green" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Active"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_secondary" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>


                        <!-- Fully Paid Contracts -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardPaidOffContracts"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="4dp"
                            app:cardCornerRadius="12dp"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardElevation="4dp"
                            app:strokeColor="@color/success_green"
                            app:strokeWidth="2dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/card_background"
                                android:orientation="vertical"
                                android:padding="16dp"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_payment"
                                    app:tint="@color/success_green"
                                    android:layout_marginBottom="8dp" />

                                <TextView
                                    android:id="@+id/tv_paid_off_contracts"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="24sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/success_green" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Fully Paid"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_secondary" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Accepted Contracts -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardAcceptedContracts"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="4dp"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="4dp"
                            app:strokeColor="@color/success_green"
                            app:strokeWidth="2dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/card_background"
                                android:orientation="vertical"
                                android:padding="16dp"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_accepted"
                                    app:tint="@color/success_green"
                                    android:layout_marginBottom="8dp" />

                                <TextView
                                    android:id="@+id/tv_accepted_contracts"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="24sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/success_green" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Accepted"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_secondary" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>

                    <!-- Row 3: Fully Paid & Expired -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">



                        <!-- Expired Contracts -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardExpiredContracts"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="4dp"
                            app:cardCornerRadius="12dp"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardElevation="4dp"
                            app:strokeColor="@color/error_red"
                            app:strokeWidth="2dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/card_background"
                                android:orientation="vertical"
                                android:padding="16dp"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_expired"
                                    android:layout_marginBottom="8dp" />

                                <TextView
                                    android:id="@+id/tv_expired_contracts"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="24sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/error_red" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Expired"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_secondary" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Cancelled Contracts -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardCancelledContracts"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="4dp"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="4dp"
                            app:strokeColor="@color/error_red"
                            app:strokeWidth="2dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/card_background"
                                android:orientation="vertical"
                                android:padding="16dp"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/cancelled_svgrepo_com"
                                    app:tint="@color/error_red"
                                    android:layout_marginBottom="8dp" />

                                <TextView
                                    android:id="@+id/tv_cancelled_contracts"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="24sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/error_red" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Cancelled"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_secondary" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Denied Contracts -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardDeniedContracts"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_marginEnd="4dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="4dp"
                            app:strokeColor="@color/error_red"
                            app:strokeWidth="2dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/card_background"
                                android:orientation="vertical"
                                android:padding="16dp"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_denied"
                                    app:tint="@color/error_red"
                                    android:layout_marginBottom="8dp" />

                                <TextView
                                    android:id="@+id/tv_denied_contracts"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="24sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/error_red" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Denied"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_secondary" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>


                    <!-- Main Action Cards -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Manage Contracts"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="16dp" />

                    <!-- View All Properties & Contracts Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_view_all_contracts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp"
                        app:strokeColor="@color/primary_blue"
                        app:strokeWidth="3dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="20dp"
                            android:background="@drawable/card_header_blue_bg"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_property"
                                app:tint="@color/primary_blue"
                                android:layout_marginEnd="16dp" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="View All Properties"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_primary"
                                    android:layout_marginBottom="4dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Browse all properties with their contract details and payment status"
                                    android:textSize="14sp"
                                    android:textColor="@color/text_secondary" />

                            </LinearLayout>


                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Payment Summary Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_payment_summary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="80dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        app:strokeColor="@color/medium_blue"
                        app:strokeWidth="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="20dp"
                            android:background="@drawable/card_details_bg">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Payment Overview"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                android:layout_marginBottom="16dp" />

                            <!-- Total Outstanding -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="12dp">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_payment"
                                    android:layout_marginEnd="12dp"
                                    app:tint="@color/error_red" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Total Outstanding"
                                        android:textSize="12sp"
                                        android:textColor="@color/text_secondary"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/tv_total_outstanding"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="$15,600"
                                        android:textSize="18sp"
                                        android:textColor="@color/error_red"
                                        android:textStyle="bold"
                                        tools:text="$15,600" />

                                </LinearLayout>

                            </LinearLayout>

                            <!-- This Month Due -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_calendar"
                                    android:layout_marginEnd="12dp"
                                    app:tint="@color/medium_blue" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Due This Month"
                                        android:textSize="12sp"
                                        android:textColor="@color/text_secondary"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/tv_month_due"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="$3,200"
                                        android:textSize="18sp"
                                        android:textColor="@color/medium_blue"
                                        android:textStyle="bold"
                                        tools:text="$3,200" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </LinearLayout>
</layout>