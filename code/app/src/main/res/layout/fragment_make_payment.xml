<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_light"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="16dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_payment_secure"
                    android:background="@drawable/circle_bg_primary"
                    android:padding="20dp"
                    android:layout_marginBottom="16dp"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Make Payment"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Record your rental payment"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:gravity="center" />

            </LinearLayout>

            <!-- Payment Info Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="@color/light_blue"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Property Name -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_property"
                            app:tint="@color/primary_blue"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Property: "
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/tv_property_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Ocean View Apartment"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary" />

                    </LinearLayout>

                    <!-- Client Name -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_person"
                            app:tint="@color/primary_blue"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Paying for: "
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/tv_client_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="John Doe"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary" />

                    </LinearLayout>

                    <!-- Amount Left to Pay -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/amount_highlight_bg"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_money"
                            app:tint="@color/success_green"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Amount Left: "
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/tv_amount_left"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="â‚¹15,000"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/success_green" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Payment Form -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_bg"
                android:padding="24dp"
                android:elevation="6dp">

                <!-- Payment Amount Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:boxStrokeColor="@color/success_green"
                    app:hintTextColor="@color/success_green"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:startIconTint="@color/text_secondary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_payment_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:hint="Payment Amount *"
                        android:inputType="numberDecimal"
                        android:drawableStart="@drawable/ic_currency"
                        android:drawablePadding="12dp"
                        android:drawableTint="@color/success_green" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Amount Validation Message -->
                <LinearLayout
                    android:id="@+id/ll_amount_validation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp"
                    android:padding="8dp"
                    android:background="@drawable/error_bg"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_warning"
                        app:tint="@color/error_red"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tv_amount_validation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Cannot pay more than the remaining amount"
                        android:textSize="12sp"
                        android:textColor="@color/error_red" />

                </LinearLayout>

                <!-- Acceptable Amount Message -->
                <LinearLayout
                    android:id="@+id/ll_acceptable_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp"
                    android:padding="8dp"
                    android:background="@drawable/success_bg"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_check_circle"
                        app:tint="@color/success_green"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tv_acceptable_amount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Valid payment amount"
                        android:textSize="12sp"
                        android:textColor="@color/success_green" />

                </LinearLayout>

                <!-- Payment Proof Upload Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment Proof (Optional)"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <!-- Image Upload Container -->
                <LinearLayout
                    android:id="@+id/ll_image_upload"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/dashed_border_secondary"
                    android:foreground="?android:attr/selectableItemBackground">

                    <ImageView
                        android:id="@+id/iv_camera"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_camera_add"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginBottom="8dp"
                        app:tint="@color/primary_blue" />

                    <TextView
                        android:id="@+id/tv_image_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add payment proof (receipt, screenshot)"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:gravity="center" />

                </LinearLayout>

                <!-- Image Preview Section (Initially Hidden) -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_image_preview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <!-- Image Preview Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Payment Proof"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary" />

                            <ImageView
                                android:id="@+id/iv_remove_image"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_close"
                                android:background="@drawable/circle_bg_error"
                                android:padding="8dp"
                                android:clickable="true"
                                android:focusable="true"
                                app:tint="@color/white" />

                        </LinearLayout>

                        <!-- Image Preview -->
                        <ImageView
                            android:id="@+id/iv_proof_preview"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:scaleType="fitCenter"
                            android:background="@drawable/image_preview_bg" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Notes Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:boxStrokeColor="@color/primary_blue"
                    app:hintTextColor="@color/primary_blue"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_notes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:hint="Add notes (optional)"
                        android:inputType="textMultiLine"
                        android:lines="3"
                        android:maxLines="5"
                        android:gravity="top"
                        android:drawableStart="@drawable/ic_notes"
                        android:drawablePadding="12dp"
                        android:drawableTint="@color/text_secondary" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Submit Payment Button -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_submit_payment"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Submit Payment"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_success"
                    android:drawableTint="@color/white"
                    android:elevation="6dp" />

            </LinearLayout>

            <!-- Loading Progress Bar -->
            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:indeterminateTint="@color/success_green"
                android:visibility="gone"/>

            <!-- Footer spacing -->
            <View
                android:layout_width="match_parent"
                android:layout_height="32dp" />

        </LinearLayout>

    </ScrollView>
</layout>