<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/contractCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="4dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@color/white"
        app:strokeColor="@color/accent_light_blue"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Top Header with Gradient Background -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_top_gradient"
                android:padding="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvContractDuration"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="May 2025 - March 2026"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvContractStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ACTIVE"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@drawable/status_badge_vacant"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:layout_marginStart="12dp"
                    android:elevation="2dp" />
            </LinearLayout>

            <!-- Contract Details Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Contract Length -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Length:"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvContractLength"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10 months"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary" />
                </LinearLayout>

                <!-- Created Date -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Created:"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvCreatedAt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="April 15, 2025"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary" />
                </LinearLayout>

                <!-- Overdue Items -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Pre-Contract Overdue:"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvOverdueItems"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3 items"
                        android:textSize="14sp"
                        android:textColor="@color/error_red" />
                </LinearLayout>

            </LinearLayout>

            <!-- View Payments Button -->
            <Button
                android:id="@+id/btnViewPayments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Payments"
                android:textStyle="bold"
                android:layout_gravity="end"
                android:backgroundTint="@color/primary_blue"
                android:textColor="@color/white"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>
