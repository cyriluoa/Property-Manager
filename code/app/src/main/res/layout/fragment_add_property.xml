<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_light"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center">

            <!-- Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="32dp"
                android:layout_marginTop="30dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_property"
                    android:background="@drawable/circle_bg_primary"
                    android:padding="20dp"
                    android:layout_marginBottom="24dp"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Property"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add new property to your portfolio"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:gravity="center" />

            </LinearLayout>

            <!-- Add Property Form -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_bg"
                android:padding="32dp"
                android:elevation="8dp">

                <!-- Property Image Upload -->
                <LinearLayout
                    android:id="@+id/ll_image_upload"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/dashed_border"

                    android:foreground="?android:attr/selectableItemBackground">

                    <ImageView
                        android:id="@+id/btnCamera"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_camera"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginBottom="8dp"
                        app:tint="@color/medium_blue" />

                    <TextView
                        android:id="@+id/tv_image_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upload an image of your property"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:gravity="center" />

                </LinearLayout>

                <!-- Property Name Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="@color/primary_blue"
                    app:hintTextColor="@color/primary_blue"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:startIconTint="@color/text_secondary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_property_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:hint="Property Name"
                        android:drawableStart="@drawable/ic_property"
                        android:drawablePadding="12dp"
                        android:drawableTint="@color/text_secondary" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Search for Clients -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:boxStrokeColor="@color/primary_blue"
                        app:hintTextColor="@color/primary_blue"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_client_search"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:hint="Client Name"
                            android:focusable="false"
                            android:drawableStart="@drawable/ic_person"
                            android:drawablePadding="12dp"
                            android:drawableTint="@color/text_secondary" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_search_clients"
                        android:layout_width="wrap_content"
                        android:layout_height="56dp"
                        android:text="Search"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:background="@drawable/button_primary"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:drawableStart="@drawable/ic_search"
                        android:drawablePadding="8dp"
                        android:drawableTint="@color/white" />

                </LinearLayout>

                <!-- Contract Duration -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:boxStrokeColor="@color/primary_blue"
                        app:hintTextColor="@color/primary_blue"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_contract_start"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:hint="Contract Start Date"
                            android:focusable="false"
                            android:clickable="true"
                            android:drawableStart="@drawable/ic_calendar"
                            android:drawablePadding="12dp"
                            android:drawableTint="@color/text_secondary" />
                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>



                <!-- Rent Start Date -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="@color/primary_blue"
                    app:hintTextColor="@color/primary_blue"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_rent_start_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:hint="Contract Length (In Months)"
                        android:inputType="number"
                        android:clickable="true"
                        android:drawableStart="@drawable/ic_calendar"
                        android:drawablePadding="12dp"
                        android:drawableTint="@color/text_secondary" />
                </com.google.android.material.textfield.TextInputLayout>




                <!-- Monthly Rent Amount -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="@color/primary_blue"
                    app:hintTextColor="@color/primary_blue"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_monthly_rent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:hint="Add monthly rent amount"
                        android:inputType="numberDecimal"
                        android:drawableStart="@drawable/ic_payment"
                        android:drawablePadding="12dp"
                        android:drawableTint="@color/text_secondary" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_add_overdue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:strokeWidth="2dp"
                    app:strokeColor="@color/primary_blue"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:rippleColor="@android:color/transparent"
                    android:foreground="@android:color/transparent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_payment"
                                app:tint="@color/text_secondary" />

                            <TextView
                                android:id="@+id/tv_add_overdue"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="12dp"
                                android:text="Add Overdue Amount(s)"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp" />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_add"
                                app:tint="@color/primary_blue" />
                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_overdue_items"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            android:nestedScrollingEnabled="false"
                            android:layout_marginTop="8dp" />

                    </LinearLayout>



                </com.google.android.material.card.MaterialCardView>


                <!-- Add Property Button -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/see_breakdown"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:enabled="false"
                    android:text="View breakdown"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_primary"
                    android:elevation="4dp" />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="32dp"
                android:indeterminateTint="@color/primary_blue"
                android:visibility="gone"/>

            <!-- Footer spacing -->
            <View
                android:layout_width="match_parent"
                android:layout_height="32dp" />

        </LinearLayout>

    </ScrollView>
</layout>